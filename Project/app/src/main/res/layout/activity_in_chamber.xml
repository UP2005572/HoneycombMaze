<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InChamberActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/start_screen" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView android:id="@+id/chamber"
            android:layout_width="396dp"
            android:layout_height="357dp"
            android:layout_centerInParent="true"
            android:src="@drawable/blank_hex"/>

        <ImageView android:id="@+id/bee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bee"
            android:scaleX="0.25"
            android:scaleY="0.25"
            android:layout_centerInParent="true"
        />

        <ImageView
            android:id="@+id/tButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:baselineAlignBottom="false"
            android:cropToPadding="true"
            android:scaleX="0.15"
            android:scaleY="0.15"
            android:src="@drawable/dir_button" />

        <ImageView
            android:id="@+id/trButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            android:rotation="45"
            android:scaleX="0.15"
            android:scaleY="0.15"
            android:src="@drawable/dir_button" />

        <ImageView android:id="@+id/brButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.15"
            android:scaleY="0.15"
            android:src="@drawable/dir_button"
            android:rotation="135"/>


        <ImageView
            android:id="@+id/bButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:scaleX="0.15"
            android:scaleY="0.15"
            android:src="@drawable/dir_button" />

        <ImageView android:id="@+id/blButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.15"
            android:scaleY="0.15"
            android:src="@drawable/dir_button"
            android:rotation="-135"/>

        <ImageView
            android:id="@+id/tlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-45"
            android:scaleX="0.15"
            android:scaleY="0.15"
            android:src="@drawable/dir_button" />
    </RelativeLayout>
</RelativeLayout>